{* LIST XML "RSS Feed" *}
<?xml version="1.0" encoding="utf-8"?>
<rss version="2.0">
	<channel>
		<title>{$smarty.const.HTML_NAME|utf8_encode|htmlspecialchars} - {$cat}</title>
		<link>{''|generate_href:false:true}</link>
		<description></description>
		{section name=file loop=$files}
			<item>
				<title>{$files[file].Filename|utf8_encode|htmlspecialchars}</title>
				<link>{$smarty.const.HTML_DOMAIN}{'file/'|cat:$cat|cat:'/'|cat:$files[file].id|cat:'/'|cat:$files[file].Filename|generate_href}</link>
				<description></description>
			</item>
		{/section}
	</channel>
</rss>
